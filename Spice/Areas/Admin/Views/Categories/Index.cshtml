@model IEnumerable<Spice.Models.Category>
@{
    ViewData["Title"] = "Index";
}



@if (Model.Count() == 0)
{
    <div class="row">
        <div class="col-6">
            <h3>There is no Categories yet</h3>
        </div>
        <div class="col-6 text-right">
            @Html.ActionLink("New Category", "New", "Categories", null, new { @class = "btn btn-info fas fa-plus" })
        </div>
    </div>
}
else
{

    <div class="container bg-light">
        <div class="row">
            <div class="col-6">
                <h3>Categories</h3>

            </div>
            <div class="col-6 text-right">
                @Html.ActionLink("New Category", "New", "Categories", null, new { @class = "btn btn-info fas fa-plus" })
            </div>
        </div>

        <table class="table table-striped">
            <thead>

                <tr>
                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    @*<th>@Html.DisplayNameFor(m => m.Category.Name)</th>*@
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("", "Edit", "Categories", new { id = item.Id }, new { @class = "btn btn-sm btn-success far fa-edit" })
                                @Html.ActionLink("", "Details", "Categories", new { id = item.Id }, new { @class = "btn btn-sm btn-info fas fa-list-ul" })
                                @Html.ActionLink("", "Delete", "Categories", new { id = item.Id }, new { @class = "btn btn-sm btn-danger far fa-trash-alt" })
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>


}

